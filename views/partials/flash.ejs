<% if (messages && messages.length > 0) { %>
  <div class="alert alert-<%= type || 'info' %> alert-dismissible fade show fixed-top mx-auto mt-4 text-center" role="alert" style="max-width: 300px;">
    <% messages.forEach(message => { %>
      <%= message %>
    <% }); %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>
