<%- include('../partials/header'); -%>
<%- include('../partials/facultyNav'); -%>
<div class="container">
  <% if (regFiles.length) { %>
    <h2>Regular Semester Files</h2>
    <ul>
      <% regFiles.forEach(file => { %>
        <li>
          <a href="/file/<%= encodeURIComponent(file.filename) %>" download="<%= file.filename %>"><%= file.filename %></a>
        </li>
      <% }); %>
    </ul>
  <% } else { %>
    <h1>No Regular Files Uploaded</h1>
  <% } %>

  <% if (suppFiles.length) { %>
    <h2>Supplementary Semester Files</h2>
    <ul>
      <% suppFiles.forEach(file => { %>
        <li>
          <a href="/file/<%= encodeURIComponent(file.filename) %>" download="<%= file.filename %>"><%= file.filename %></a>
        </li>
      <% }); %>
    </ul>
  <% } else { %>
    <h1>No Supplementary Files Uploaded</h1>
  <% } %>
</div>
<div class="container my-3">
  <a href="/faculty/mentees/<%= student._id %>/profile" class="btn btn-primary mb-2">View Profile</a>
  <a href="/faculty/mentees/<%= student._id %>/progress" class="btn btn-success mb-2">View Academic Progress</a>
  <a href="/faculty/mentees/<%= student._id %>/report" class="btn btn-info mb-2">Generate Report</a>
</div>
<%- include('../partials/footer'); -%>