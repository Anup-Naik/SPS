<%- include('../partials/header'); -%> <%- include('../partials/facultyNav'); -%>
<div class="container">
  <% if (regFiles.length) { %>
  <h2 class="my-4">Regular Semester Files</h2>
  <ul class="list-group mb-4">
    <% regFiles.forEach(file => { %>
    <li class="list-group-item">
      <a
        href="/file/<%= encodeURIComponent(file.filename) %>"
        download="<%= file.filename %>"
        class="link-secondary link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover"
        ><%= file.filename %></a
      >
    </li>
    <% }); %>
  </ul>
  <% } else { %>
  <h4 class="text-muted my-4">No Regular Files Uploaded</h4>
  <% } %>

  <% if (suppFiles.length) { %>
  <h2 class="my-4">Supplementary Semester Files</h2>
  <ul class="list-group mb-4">
    <% suppFiles.forEach(file => { %>
    <li class="list-group-item">
      <a
        href="/file/<%= encodeURIComponent(file.filename) %>"
        download="<%= file.filename %>"
        class="text-decoration-none text-body"
        ><%= file.filename %></a
      >
    </li>
    <% }); %>
  </ul>
  <% } else { %>
  <h4 class="text-muted my-4">No Supplementary Files Uploaded</h4>
  <% } %>
</div>
<div class="container my-3">
  <a
    href="/faculty/mentees/<%= student._id %>/profile"
    class="btn btn-primary mb-2"
    >View Profile</a
  >
  <a
    href="/faculty/mentees/<%= student._id %>/progress"
    class="btn btn-success mb-2"
    >View Academic Progress</a
  >
  <a
    href="/faculty/mentees/<%= student._id %>/report"
    class="btn btn-info mb-2"
    >Generate Report</a
  >
</div>
<%- include('../partials/footer'); -%>