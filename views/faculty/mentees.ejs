<%- include('../partials/header'); -%> <%- include('../partials/facultyNav'); -%> <%- include('../partials/flash', {
      messages: successMessages, type: 'success' }) %> <%- include('../partials/flash', { messages: errorMessages,
        type: 'danger' }) %>

        <div class="container">
          <h2 class="mb-4">Faculty Mentees</h2>
          <% if (faculty && faculty.mentees && faculty.mentees.length) { %>
            <ul class="list-group">
              <li class="list-group-item bg-secondary text-white mb-3">
                <div class="row">
                  <div class="col"><b>USN</b></div>
                  <div class="col"><b>Name</b></div>
                  <div class="col"><b>Semester</b></div>
                  <div class="col"><b>Remarks</b></div>
                </div>
              </li>
              <% for( let i=1; i <=8; i++ ) { %>
                <% faculty.mentees.forEach(mentee=> { %>
                  <% if (mentee.mentee.sem==i) { %>

                    <li class="list-group-item mb-3">
                      <div class="row align-items-center">
                        <div class="col">
                          <%= mentee.mentee.username %>
                        </div>
                        <div class="col">
                          <%= mentee.mentee.fullname %>
                        </div>
                        <div class="col">
                          <%= mentee.mentee.sem %>
                        </div>
                        <div class="col">
                          <form action="/faculty/mentees/<%= mentee.mentee._id %>/remarks" method="POST">
                            <div class="form-group">
                              <textarea class="form-control form-control-sm mb-2" id="menteeRemark"
                                name="mentee[remarks]" rows="3">
                              <%= mentee.remarks %></textarea>
                              <button type="submit" class="btn btn-primary">Save Remark</button>
                            </div>
                          </form>
                        </div>
                      </div>
                    </li>
                    <% } %>
                      <% }); %>
                        <% } %>
            </ul>
            <% } else { %>
              <p>No mentees found.</p>
              <% } %>
        </div>

        <%- include('../partials/footer'); -%>