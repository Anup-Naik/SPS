<%- include('../partials/header'); -%> <%- include('../partials/facultyNav'); -%>
<%- include('../partials/flash', { messages: successMessages, type: 'success' }) %>
<%- include('../partials/flash', { messages: errorMessages, type: 'danger' }) %>


<div class="container mt-5">
  <h1>Change Password</h1>
  <form action="/faculty/password" method="POST">
    <div class="form-group">
      <label for="currentPassword">Current Password</label>
      <input
        type="password"
        class="form-control"
        id="currentPassword"
        name="currentPassword"
        required
      />
    </div>
    <div class="form-group">
      <label for="newPassword">New Password</label>
      <input
        type="password"
        class="form-control"
        id="newPassword"
        name="newPassword"
        minlength="8"
        required
      />
    </div>
    <div class="form-group">
      <label for="confirmPassword">Confirm New Password</label>
      <input
        type="password"
        class="form-control"
        id="confirmPassword"
        name="confirmPassword"
        minlength="8"
        required
      />
    </div>
    <button type="submit" class="btn btn-primary my-3">Change Password</button>
  </form>
</div>
<%- include('../partials/footer'); -%>
