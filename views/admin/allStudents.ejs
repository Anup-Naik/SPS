<%- include('../partials/header'); -%> <%- include('../partials/adminNav'); -%>
<%- include('../partials/flash', { messages: successMessages, type: 'success' })
%> <%- include('../partials/flash', { messages: errorMessages, type: 'danger' })
%>

<div class="container">
  <h1 class="mt-4 mb-4">All Students</h1>

  <% if(students.length){ %>
  <h2 class="mt-4 mb-4">Student List</h2>
  <ul class="list-group">
    <% students.forEach(student=> { %>
    <li
      class="list-group-item d-flex justify-content-between align-items-center mb-1"
    >
      <%= student.username %>
      <div class="btn-group" role="group">
        <a
          href="/admin/student/<%= student._id %>/edit"
          class="btn btn-sm btn-info"
          >Edit</a
        >
        <form
          action="/admin/student/<%= student._id %>?_method=DELETE"
          method="POST"
        >
          <button type="submit" class="btn btn-sm btn-danger mx-3">
            Delete
          </button>
        </form>
      </div>
    </li>
    <% }) %>
  </ul>
  <% } %>
</div>
<%- include('../partials/footer'); -%>
