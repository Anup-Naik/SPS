<%- include('../partials/header'); -%> <%- include('../partials/adminNav'); -%>
    <%- include('../partials/flash', { messages: successMessages, type: 'success' }) %> <%- include('../partials/flash',
        { messages: errorMessages, type: 'danger' }) %>

        <div class="container">
          <h1 class="mt-4 mb-4">Edit Faculty</h1>
          <div class="row justify-content-center">
            <div class="col-md-6">
              <div class="card">
                <div class="card-body">
                  <!-- Edit Faculty Form -->
                  <form action="/admin/faculty/<%= faculty._id %>?_method=PUT" method="POST" class="mb-4">
                    <div class="form-group">
                      <label for="department">Department:</label>
                      <select id="department" name="department" class="form-control form-control-sm" required>
                        <option value="">Select Department</option>
                        <option value="AI" <%=faculty.department=='AI' ?'selected':"" %>
                          >Artificial Intelligence</option>
                        <option value="AU" <%=faculty.department=='AU' ?'selected':"" %>
                          >Automobile</option>
                        <option value="BT" <%=faculty.department=='BT' ?'selected':"" %>
                          >Bio-Technology</option>
                        <option value="CS" <%=faculty.department=='CS' ?'selected':"" %>
                          >Computer Science</option>
                        <option value="CV" <%=faculty.department=='CV' ?'selected':"" %>>Civil
                        </option>
                        <option value="EC" <%=faculty.department=='EC' ?'selected':"" %>
                          >Electronics and Communication</option>
                        <option value="EE" <%=faculty.department=='EE' ?'selected':"" %>
                          >Electrical and Electronics</option>
                        <option value="EI" <%=faculty.department=='EI' ?'selected':"" %>
                          >Electronics and Instrumentation</option>
                        <option value="IP" <%=faculty.department=='IP' ?'selected':"" %>
                          >Industrial Production</option>
                        <option value="IS" <%=faculty.department=='IS' ?'selected':"" %>
                          >Information Science</option>
                        <option value="ME" <%=faculty.department=='ME' ?'selected':"" %>
                          >Mechanical</option>
                      </select>
                    </div>
                    <div class="form-group">
                      <label for="username">Username:</label>
                      <input type="text" id="username" name="username" class="form-control form-control-sm"
                        value="<%= faculty.username %>" required />
                    </div>
                    <div class="form-group">
                      <label for="password">Password:</label>
                      <input type="password" id="password" name="password" minlength="8" value="<%= faculty.password %>"
                        class="form-control form-control-sm" required disabled />
                    </div>
                    <div class="form-group">
                      <label for="name">Name:</label>
                      <input type="text" id="name" name="name" value="<%= faculty.name %>" class="form-control form-control-sm"
                        required />
                    </div>
                    <div class="form-group">
                      <label for="contact">Contact:</label>
                      <input type="number" id="contact" name="contact" value="<%= faculty.contact %>"
                        class="form-control form-control-sm" required />
                    </div>
                    <div class="form-group">
                      <label for="email">Email:</label>
                      <input type="email" id="email" name="email" value="<%= faculty.email %>" class="form-control form-control-sm"
                        required />
                    </div>
                    <div class="text-center">
                      <button type="submit" class="btn btn-primary mt-3">
                        Edit Faculty
                      </button>
                      <button type="reset" class="btn btn-secondary mt-3">Reset</button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
        <%- include('../partials/footer'); -%>